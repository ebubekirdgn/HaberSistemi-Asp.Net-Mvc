@model IEnumerable<HaberSistemi.Data.Model.Haber>
@{
    ViewBag.Title = "Haber Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Haber Listesi
        </div>
        <div class="card-body">
            @if (TempData["Bilgi"] != null)
            {@TempData["Bilgi"];
        }
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th><span class="fa fa-key"></span> </th>
                            <th>Resim</th>
                            <th>Başlık</th>
                            <th>Eklenme Tarihi</th>
                            <th>Kategori</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td><img src="@item.Resim" alt="@item.Baslik" width="100" /></td>
                                <td>@item.Baslik</td>
                                <td>@item.EklenmeTarihi.ToString("MM.dd.yyyy")</td>

                                <td>@item.Kategori.KategoriAdi</td>
                                <td>
                                    @if (item.AktifMi == true)
                                    {
                                        <b class="fa fa-"> Aktif</b>
                                    }
                                    else
                                    {
                                        <b class="fa fa-warning">Pasif</b>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-success btn-sm" id="KategoriDelete" data-id="@item.ID">Detay</button>
                                    <button class="btn btn-danger btn-sm" id="KategoriDelete" data-id="@item.ID">Sil</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>